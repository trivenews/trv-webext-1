{
  "name": "trv-webext",
  "version": "0.0.1",
  "description": "Companion browser extension for Trive",
  "author": "devkabiir <dev@kabiir.me>",
  "license": "MIT",
  "homepage": "https://github.com/devkabiir/trv-webext",
  "readmeFilename": "README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/devkabiir/trv-webext"
  },
  "bugs": {
    "url": "https://github.com/devkabiir/trv-webext/issues"
  },
  "private": true,
  "scripts": {
    "start": "node scripts/start.js",
    "start-content": "node scripts/start.js --main=content",
    "build": "node scripts/build.js",
    "devbuild": "node scripts/build.js --devbuild",
    "zip": "node scripts/pack.js",
    "test": "node scripts/test.js --env=jsdom",
    "commit": "git-cz",
    "release": "standard-version",
    "commitmsg": "commitlint -e $GIT_PARAMS"
  },
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 5.6.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "resolutions": {
    "@types/react": "*"
  },
  "dependencies": {
    "@types/node": "9.6.28",
    "@types/react-dom": "16.0.7",
    "bootstrap": "4.1.3",
    "cropperjs": "1.4.1",
    "react": "16.4.2",
    "react-dom": "16.4.2",
    "reactstrap": "6.3.1",
    "tabler": "tabler/tabler#v0.0.32",
    "web-ext-types": "crimx/web-ext-types",
    "webextension-polyfill": "0.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "6.2.0",
    "@commitlint/config-conventional": "6.1.3",
    "@types/enzyme": "3.1.13",
    "@types/jest": "22.2.3",
    "@types/sinon-chrome": "2.2.4",
    "archiver": "2.1.1",
    "autoprefixer": "7.2.6",
    "babel-core": "6.26.0",
    "babel-jest": "22.4.1",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-react": "6.24.1",
    "babel-runtime": "6.26.0",
    "case-sensitive-paths-webpack-plugin": "2.1.1",
    "chalk": "2.3.2",
    "commitizen": "2.10.1",
    "copy-webpack-plugin": "4.5.2",
    "css-loader": "0.28.10",
    "cz-conventional-changelog": "2.1.0",
    "dotenv": "5.0.1",
    "enzyme": "3.4.4",
    "enzyme-adapter-react-16": "1.2.0",
    "enzyme-to-json": "3.3.4",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.11",
    "fork-ts-checker-webpack-plugin": "0.4.9",
    "fs-extra": "5.0.0",
    "generate-json-webpack-plugin": "0.2.2",
    "html-webpack-plugin": "3.0.6",
    "husky": "0.14.3",
    "jest": "22.4.4",
    "jest-fetch-mock": "1.6.5",
    "jsconfig-paths-webpack-plugin": "0.1.3",
    "minimist": "1.2.0",
    "node-sass": "4.9.3",
    "postcss-flexbugs-fixes": "3.3.0",
    "postcss-increase-specificity": "0.6.0",
    "postcss-loader": "2.1.1",
    "postcss-safe-important": "1.1.0",
    "raf": "3.4.0",
    "raw-loader": "0.5.1",
    "react-dev-utils": "5.0.1",
    "sass-loader": "6.0.7",
    "semver": "5.4.1",
    "sinon-chrome": "2.3.2",
    "standard-version": "4.4.0",
    "style-loader": "0.20.3",
    "text-transform-loader": "2.0.0",
    "ts-import-plugin": "1.5.4",
    "ts-jest": "22.4.6",
    "ts-lint": "4.5.1",
    "ts-loader": "3.5.0",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-config-prettier": "1.15.0",
    "typescript": "2.9.2",
    "uglifyjs-webpack-plugin": "1.3.0",
    "url-loader": "1.0.1",
    "webextensions-api-fake": "0.5.1",
    "webextensions-jsdom": "0.11.0",
    "webpack": "3.11.0",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-dev-server": "2.11.1",
    "wrapper-webpack-plugin": "1.0.0"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "collectCoverageFrom": [
      "<rootDir>/src/content/**/*.{ts,tsx}",
      "<rootDir>/src/background/**/*.{ts,tsx}",
      "<rootDir>/src/popup/**/*.{ts,tsx}",
      "<rootDir>/src/components/**/*.{ts,tsx}",
      "<rootDir>/src/lib/**/*.{ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/config/jest/setupTests.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/test/specs/**/*.{ts,tsx,js,jsx}"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(ts|tsx|js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.js$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx",
      "node"
    ]
  }
}